{% extends "_layout" %}

{% block main %}

{% set product = entry.productSingle.first() %}

<main>
  <article class="bg-white">
    <div class="vh-75 cover bg-center" style="background-image: url(https://dummyimage.com/1024x768/b8b8b8/ffffff&text=Product+Hero+Image);"></div>
    <div class="ph4 ph5-m ph6-l cf">
      <div class="pv5 f4 f2-ns measure">
        {% set parentLevel1 = ( entry.parent.parent.parent ) ? '<a href="' ~ entry.parent.parent.parent.url ~ '">' ~ entry.parent.parent.parent.title ~ '</a> / ' %}
        {% set parentLevel2 = ( entry.parent.parent ) ? '<a href="' ~ entry.parent.parent.url ~ '">' ~ entry.parent.parent.title ~ '</a> / ' %}
        {% set parentLevel3 = ( entry.parent ) ? '<a href="' ~ entry.parent.url ~ '">' ~ entry.parent.title ~ '</a> / ' %}
        <small>
            {{ (parentLevel1 is not empty) ? parentLevel1|raw }}
            {{ (parentLevel2 is not empty) ? parentLevel2|raw }}
            {{ (parentLevel3 is not empty) ? parentLevel3|raw }}
            {{ entry.title }}
        </small>
        <h1 class="fw6 f1 fl w-100 black-70 mt0 mb3 avenir">{{ product.title }} (Product Single)</h1>
        <p class="db lh-copy black-70 serif fw1 mv0 f4 f3-m f2-l measure baskerville">
          A short description of your project. Maybe a few notes concerning your
          constraints and process.  Standard lorem ipsum dolor sit amet, consectetur adipisicing
          elit, sed do eiusmod tempor incididunt ut labore etc. al dolore magna
          aliqua. Ut enim ad.
        </p>
      </div>
    </div>
  </article>
</main>

{% endblock %}